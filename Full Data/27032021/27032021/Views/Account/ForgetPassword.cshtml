@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "ResetPassword";
}

<!-- Start Login Register Area -->
<div class="htc__login__register bg__white ptb--130" style="background: rgba(0, 0, 0, 0) url(/images/bg/5.jpg) no-repeat scroll center center / cover ;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <ul class="login__register__menu" role="tablist">
                    <li role="presentation" class="register active"><a href="#register" role="tab" data-toggle="tab">Forget password</a></li>
                </ul>
            </div>
        </div>
        <!-- Start Login Register Content -->
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                @if (HttpContextAccessor.HttpContext.Session.GetString("wrongMail") == "true")
                {
                    HttpContextAccessor.HttpContext.Session.Remove("wrongMail");

                    <div class="alert alert-danger">
                        Mail is wrong
                    </div>
                }

                <div class="htc__login__register__wrap">
                    <div id="register" role="tabpanel" class="single__tabs__panel tab-pane fade in active">
                        <form class="login" asp-controller="account" asp-action="ForgetPassword" method="post">
                            <input type="email" name="email" placeholder="Email*">
                            <br />
                            <div class="htc__login__btn">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </form>
                    </div>
                    <!-- End Single Content -->
                </div>
            </div>
        </div>
        <!-- End Login Register Content -->
    </div>
</div>
<!-- End Login Register Area -->